<% content_for :head do %>
<script>
var clientWidth, doc;
doc = document.documentElement;
clientWidth = doc.clientWidth;
if (clientWidth <= 640) {
  doc.style.fontSize = 20 * (clientWidth / 640) + 'px';
};
</script>
<style>
html,
body {
  height: 100%;
  background-color: #ea1644;
}

@media (max-width: 740px) {
  main {
    min-height: 100%!important;
  }

}
main {
  /*background-color: #edba00;
  margin: 0 auto;
  max-height: 100%;
  min-height: 50rem;
