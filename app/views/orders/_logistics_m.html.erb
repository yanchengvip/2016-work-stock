<% content_for :head do %>
    <style>html{height:100%;background-color: #f4f4f4;}</style>
<% end %>
<% content_for :header do %>
<header class="no-search clearfix">
  <div class="header-left">
    <a href="javascript:goBack()" id="back"></a>
  </div>
  <div class="ordersHeader_title">物流跟踪</div>
</header>
<% end %>
<% content_for :main do %>
<main class="logistics">
  <div class="general row padding">
    <div class="pic col s4">
      <%= image_tag @order.order_products.first.product.cover_url('v100'), class: "responsive-img" %>
    </div>
    <div class="current-status col s8">
      <div>
        <span class="big-text jhb-grey">订单状态 </span><span class="big-text jhb-grey"><%= @order.status_str %></span>
        </div>
      <div class="jhb-grey">
        订单号：&nbsp;&nbsp;&nbsp;&nbsp;<%= @order.OrderCode%>
      </div>
      <div class="jhb-grey">
        派送电话：<%= @order.DriverMobile%>
      </div>
    </div>
  </div>
  <div class="gap"></div>
  <div class="container">
    <div class="page-title">
      物流跟踪
    </div>
    <!-- <div class="line"></div> -->
    <div class="status">
    <% if @order.logistics_logs.length != 0 %>
      <% @order.logistics_logs.each_with_index do |log, index| %>
        <div class="padding <%= index == 0 ? 'jhb-red' : '' %> <%= index == @order.logistics_logs.length - 1 ? 'final' : '' %>">
          <div class="circle"></div>
          <div class="connect-line"></div>
          <div><%= log.logistics_status %></div>
          <div class="small-text"><%= log.OperationDate.strftime("%Y-%m-%d %H:%M:%S") %></div>
        </div>

      <% end %>
    <% else %>
      <div class="jhb-grey no-logistics_logs">暂无物流信息</div>
    <% end %>
    </div>
  </div>
</main>
<% end %>
<% content_for :footer do %>
  <i></i>
<% end %>
