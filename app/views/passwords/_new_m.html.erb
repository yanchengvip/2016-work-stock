<% content_for :header do %>
  <style type="text/css">
  body{
    background-color: #f3f4f5;
  }
</style>

<header class="no-search title clearfix">
  <div class="header-left">
    <a href="javascript:goBack()" id=""></a>
  </div>
  <div class="ordersHeader_title">找回密码</div>
</header>
<% end %>
<% content_for :main do %>
  <main class="container new-tel">
    <div class=" pt-login">
      <% flash.each do |type, message| %>
        <% unless message.blank? %>
          <div class="alert <%= twitterized_type(type) %> fade in text-center">
            <%= message %>
          </div>
        <% end %>
      <% end %>
      <%= form_tag '/passwords', class: "pure-form password-new" do %>
        <fieldset class="">
          <div class="tel-num input-box">
            <span>手机号</span>
            <input type="number" id="tel" class="" name="user[Phone]" placeholder="请输入手机号" required>
          </div>
          <div class="tel-code input-box">
            <span>验证码</span>
            <input type="number" class="" id="code" name="user[check_code]" placeholder="请输入验证码" required>
            <div type="button" id="getcode" class="get-sms-code" >获取验证码</div>
          </div>
          <div class="tel-password input-box">
            <span>新密码</span>
            <input type="password" class="" id="" name="user[Password]" placeholder="请输入密码" required>
          </div>
          <div class="tel-password input-box">
            <span>确认密码</span>
            <input type="password" class="" id="" name="user[password_confirmation]" placeholder="请确认密码" required>
          </div>
        </fieldset>
        <p class="phone-voice">未收到验证码？ <a href="javascript:;">请尝试语音播报</a></p>
        <div class="btn btn-password-new">提交</div>
      <% end %>
    </div>
  </main>
<% end %>
<% content_for :footer do %>&nbsp;<% end %>
<% content_for :script do %>
  <%= javascript_include_tag 'session', 'data-turbolinks-track' => true %>
<% end %>
